<UserControl x:Class="Administration_GUI.User_Controls.ChangePrice"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Administration_GUI.User_Controls"
             xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Input.Toolkit"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:command="http://www.galasoft.ch/mvvmlight"
             mc:Ignorable="d" 
     d:DesignHeight="500" d:DesignWidth="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="5"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="5"/>
        </Grid.ColumnDefinitions>
        <Button 
            Command="{Binding ChangeProductPriceInStoreDatabaseCommand}"  
            Content="Opdater pris" 
            Grid.Column="2" 
            Grid.Row="2" 
            Width="75" 
            Margin="356,44,-425,-59" 
            Height="25"/>
        <controls:AutoCompleteBox 
            ItemsSource="{Binding AutoCompleteList}" 
            Text="{Binding ShoppingListItem, Mode=TwoWay}" 
            Grid.Column="2" 
            Grid.Row="2" 
            Height="23" 
            VerticalAlignment="Top" 
            Width="139" 
            Margin="60,44,-193,-61">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="Populating">
                    <i:InvokeCommandAction Command="{Binding PopulatingChangePriceCommand}"></i:InvokeCommandAction>
                </i:EventTrigger>
                <i:EventTrigger EventName="TextChanged">
                    <i:InvokeCommandAction Command="{Binding IllegalSignChangePriceCommand}"></i:InvokeCommandAction>
                </i:EventTrigger>
                <i:EventTrigger EventName="PreviewKeyDown">
                    <command:EventToCommand Command="{Binding EnterKeyPressedCommand}" PassEventArgsToCommand="True">
                    </command:EventToCommand>
                </i:EventTrigger>
            </i:Interaction.Triggers>

        </controls:AutoCompleteBox>
        <TextBox
            
            Text="{Binding ShoppingListItemPrice}"
            Grid.Column="2" 
            Grid.Row="2" 
            Height="23" 
            Margin="240,42,-317,-59" 
            TextWrapping="Wrap" 
            VerticalAlignment="Top" 
            Width="83">
        </TextBox>

        <Label 
            Content="kr." 
            HorizontalAlignment="Left"  
            VerticalAlignment="Top" 
            Grid.Column="2" 
            Grid.Row="2" 
            Margin="323,36,-339,-55" 
            Height="25"/>
        <Label 
            Content="{Binding ConfirmText}" 
            HorizontalAlignment="Left"  
            VerticalAlignment="Top" 
            Width="417" 
            Grid.Column="2" 
            Grid.Row="2" 
            Margin="107,116,-518,-132" 
            Height="25"/> 
    </Grid>
</UserControl>



